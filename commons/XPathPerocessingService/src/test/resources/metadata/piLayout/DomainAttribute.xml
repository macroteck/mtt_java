    </display-group>
  </category-layout>
  <category-layout id="hints" title="${CATEGORY_UIHINTS_KEY}">
   <display-group id="propertySetGrp">
      <property id="Properties Properties/SchemaBasedProperties Properties/SchemaBasedProperties/LABEL"/>
